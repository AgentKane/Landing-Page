<script>

function generateSKU() {

let prefix = document.getElementById("prefix").value.toUpperCase();

if (!prefix) {
  prefix = "";
  for (let i = 0; i < 3; i++) {
    prefix += String.fromCharCode(Math.floor(Math.random() * 26) + 65); 
  }
}

let sku = prefix + "/";

const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
const numbers = "0123456789";

for (let i = 0; i < 3; i++) {
  sku += letters.charAt(Math.floor(Math.random() * letters.length));
  sku += numbers.charAt(Math.floor(Math.random() * numbers.length));
}

return sku;
}

function generateSKUs() {

let skus = "";

for (let i = 0; i < 1; i++) {

  const sku = generateSKU();
  
  skus += `
    <div class="sku">
      ${sku} <br>  
      <button onclick="copySKU('${sku}')">Copy</button>
    </div>
  `;

}

document.getElementById("skus").innerHTML = skus;

}

function copySKU(sku) {
  navigator.clipboard.writeText(sku);
}

</script>

